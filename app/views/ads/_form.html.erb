<%= form_for(ad) do |f| %>
  <% if ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

      <ul>
      <% ad.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :brand %>
    <%= f.text_field :brand %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div class="field">
    <%= f.label :region %>
    <%= f.text_field :region %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :cellphone %>
    <%= text_field_tag "ad[cellphone]", "#{current_user.ads.last.cellphone if current_user.ads.last.nil? == false}"  %>
  </div>

  <div class="field">
    <%= f.label :phone %>
    <%= text_field_tag "ad[phone]", "#{current_user.ads.last.phone if current_user.ads.last.nil? == false}" %>
  </div>

  <div class="field">
    <%= f.label :adress %>
    <%= text_field_tag "ad[adress]", "#{current_user.ads.last.adress if current_user.ads.last.nil? == false}" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
