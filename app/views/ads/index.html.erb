<p id="notice"><%= notice %></p>

<h1>Ads</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Price</th>
      <th>State</th>
      <th>Visit count</th>
      <th>Region</th>
      <th>City</th>
      <th>Cellphone</th>
      <th>Phone</th>
      <th>Adress</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.title %></td>
        <td><%= ad.description %></td>
        <td><%= ad.brand %></td>
        <td><%= ad.price %></td>
        <td><%= ad.state %></td>
        <td><%= ad.visit_count %></td>
        <td><%= ad.region %></td>
        <td><%= ad.city %></td>
        <td><%= ad.cellphone %></td>
        <td><%= ad.phone %></td>
        <td><%= ad.adress %></td>
        <td><%= ad.status %></td>
        <td><%= ad.user %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ad', new_ad_path %>
