<div class="mdl-grid big-margin">
  <div class="mdl-cell--4-col mdl-cell--middles white center">
    
  <h2 class="grey-text center-text marine small-padding">Iniciar Sesion</h2>
  <div class="center padding">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label all-width">
        <%= f.label :email, "Correo electrónico", for:"user_email" ,class:"mdl-textfield__label" %><br />
        <%= f.email_field :email, class:"mdl-textfield__input" %>
      </div>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label  all-width">
        <%= f.label :password, "Contraseña", for:"user_password" ,class:"mdl-textfield__label" %><br />
        <%= f.password_field :password, autocomplete: "off", class:"mdl-textfield__input" %>
      </div>
      
      <% if devise_mapping.rememberable? -%>
        <div class="field bottom-space">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions bottom-space bottom-margin">
        <%= f.submit "Iniciar Sesion", class:"mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect marine white-text" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
